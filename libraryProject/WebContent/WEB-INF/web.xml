<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<welcome-file-list>
		<welcome-file>homepage</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SiteController</servlet-name>
		<servlet-class>com.library.controller.SiteController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>BookController</servlet-name>
		<servlet-class>com.library.controller.BookController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AdminController</servlet-name>
		<servlet-class>com.library.controller.AdminController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RequestController</servlet-name>
		<servlet-class>com.library.controller.RequestController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SiteController</servlet-name>
		<url-pattern>/homepage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>BookController</servlet-name>
		<url-pattern>/libro</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AdminController</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RequestController</servlet-name>
		<url-pattern>/requestForm</url-pattern>
	</servlet-mapping>
</web-app>